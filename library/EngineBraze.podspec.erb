<%
  versions_map = eval(File.open('DEPS_VERSION.rb') { |f| f.read })
%>
Pod::Spec.new do |s|
  s.name         = "BrazeEngine"
  s.version      = "<%= begin; File.read('VERSION'); rescue; "0.0.0"; end %>"
  s.summary      = "Integration library for Factual's Engine SDK and Braze iOS SDK"
  s.description  = <<-DESC  		   
  		   "Integration library for Factual's Engine SDK and Braze iOS SDK""
                   DESC
  s.homepage     = "https://www.factual.com/products/engine"
  s.license      = "MIT"
  s.author       = { "Factual Inc" => "mobile@factual.com" }
  s.platform     = :ios
  s.source       = { :http => "https://factual.bintray.com/files/braze-engine-ios-#{s.version.to_s}.tar.gz", :flatten => true }
  s.source_files         = "*.h"
  s.preserve_paths       = "libBrazeEngineIntegration.a"
  s.ios.vendored_library = "libBrazeEngineIntegration.a"
  s.libraries            = "z"  
  s.dependency "Appboy-iOS-SDK", "~> <%= versions_map[:appboy] %>"
  s.dependency "FactualEngineSDK", "<%= versions_map[:factual_engine] %>"
end
